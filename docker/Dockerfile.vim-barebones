FROM debian:buster-slim

RUN apt-get update && apt upgrade -y
RUN apt-get install -y \
    apt-utils \
    vim

# C/C++のLSPを使うためのもの (必須ではない)
RUN apt-get install -y \
    clangd-11

ADD vim-barebones /root/vim-barebones
WORKDIR /root/vim-barebones plugins
RUN ./install.sh
WORKDIR /root

RUN rm -rf /root/vim-barebones
